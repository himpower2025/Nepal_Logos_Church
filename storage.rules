rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 모든 사용자가 모든 파일을 읽을(볼) 수 있도록 허용합니다.
    match /{allPaths=**} {
      allow read;
    }

    // 로그인한 사용자는 아래 지정된 폴더에만 파일을 쓸(업로드할) 수 있도록 허용합니다.
    match /chat_media/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /news/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /podcasts/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /prayers/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /assets/{allPaths=**} {
        allow write: if request.auth != null;
    }
  }
}